
    <div class="row-fluid">
      <div class="span12">
        <div id="nadpis">
          <h1><strong><%= article.author.name %> :</strong> <%= article.title %></h1>
        </div>
        <div id="datum">
          <%= article.author.created_at.strftime "%d.%m.%Y %H:%M:%S" %>
        </div>
        <div id="obsah" class="more">

          <%=  article.content %>

          <hr>
          <%= debug  article.comments %>
          <%= render :partial => "comment", :collection => article.comments, :locals => { :comments => article.comments } %>
        </div>

      </div>

    </div>

