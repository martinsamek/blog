<h2>Pridat komentar:</h2>


<%=  form_for ([@author, @author.comments.build]) do |f| %>
    <div class="field">
      <%= f.label :commenter %><br />
      <%= f.text_field :commenter %>
    </div>
    <div class="field">
      <%= f.label :comment_body %><br />
      <%= f.text_area :comment_body %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>