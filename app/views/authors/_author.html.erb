<div class="row-fluid">
  <div class="span12">
    <p>
        <strong>Name:</strong>
        <%= @author.name %>
    </p>

    <p>
        <strong>Age:</strong>
        <%= @author.age %>
    </p>

    <p>
        <strong>Email:</strong>
        <%= @author.email %>
    </p>

    <hr>
    <h2>Komentare : </h2>

    <%= render :partial => "comment", :collection => @author.comments %>
    <%= render :partial => "comment_form", :locals => { :author => @author } %>

    <hr>
  </div>
</div>

